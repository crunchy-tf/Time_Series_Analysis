# time_series_analysis_service/.env.example

LOG_LEVEL="INFO"

# --- TimescaleDB Connection (Reading signals AND Writing analysis results) ---
TIMESCALEDB_USER="your_timescaledb_user"
TIMESCALEDB_PASSWORD="your_timescaledb_password"
TIMESCALEDB_HOST="your_timescaledb_host"
TIMESCALEDB_PORT="5432"
TIMESCALEDB_DB="minbar_timeseries_db" # Same DB where Signal Extractor writes

# --- Table Naming Conventions ---
# Prefix for tables containing raw signals from Signal Extraction service
SOURCE_SIGNALS_TABLE_PREFIX="agg_signals" 
# Prefix for tables where this service writes its analysis results
ANALYSIS_RESULTS_TABLE_PREFIX="analysis_results"

# Default parameters for analysis (can still be overridden in requests)
DEFAULT_MOVING_AVERAGE_WINDOW="7"
DEFAULT_ROC_PERIOD="1"
DEFAULT_ZSCORE_ROLLING_WINDOW="" # Empty means use whole series
DEFAULT_STL_PERIOD="" # Empty means let statsmodels infer

# Optional: Scheduler settings if you add one later
# SCHEDULER_INTERVAL_MINUTES="120" 